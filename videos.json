// ============================================
// VIDEO MANAGER
// ============================================
class VideoManager {
  constructor(containerId) {
    this.container = document.getElementById(containerId);
    this.videos = videos;
  }

  init() {
    if (!this.container) return;

    // Crear todas las tarjetas de video
    this.videos.forEach((video, index) => {
      const card = this.createVideoCard(video, index);
      this.container.appendChild(card);
    });

    // Event delegation para manejar clicks
    this.container.addEventListener('click', (e) => {
      this.handleCardClick(e);
    });
  }

  createVideoCard(video, index) {
    const card = document.createElement('div');
    card.className = 'video-card';
    card.innerHTML = `
      <div class="video-title" data-index="${index}">${video.nombre}</div>
      <div class="video-frame"></div>
    `;
    return card;
  }

  handleCardClick(e) {
    if (!e.target.classList.contains('video-title')) return;

    const card = e.target.parentElement;
    const frame = card.querySelector('.video-frame');
    const index = e.target.getAttribute('data-index');
    
    // Toggle active state
    card.classList.toggle('active');
    
    // Cargar iframe solo cuando se abre la card
    if (card.classList.contains('active') && frame.childElementCount === 0) {
      this.loadVideoIframe(frame, index);
    }
    
    // Limpiar iframe cuando se cierra (opcional, para liberar memoria)
    if (!card.classList.contains('active')) {
      frame.innerHTML = '';
    }
  }

  loadVideoIframe(frame, index) {
    const video = this.videos[index];
    if (!video) return;

    frame.innerHTML = `
      <iframe 
        width="329" 
        height="184.91" 
        src="${video.url}" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen>
      </iframe>
    `;
  }
}

// ============================================
// INITIALIZE VIDEO MANAGER
// ============================================
document.addEventListener('DOMContentLoaded', () => {
  const videoManager = new VideoManager('videos_ejercicios');
  videoManager.init();
});